{
  "name": "@scintilla-network/signatures",
  "version": "1.1.0",
  "description": "Enhanced signature and key exchange functions for blockchain and crypto applications, including post-quantum algorithms",
  "type": "module",
  "main": "src/index.js",
  "types": "./src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "default": "./src/index.js"
    },
    "./classic": {
      "types": "./src/classic/index.d.ts",
      "default": "./src/classic/index.js"
    },
    "./pq": {
      "types": "./src/pq/index.d.ts",
      "default": "./src/pq/index.js"
    },
    "./kex": {
      "types": "./src/kex/index.d.ts",
      "default": "./src/kex/index.js"
    },
    "./utils": {
      "types": "./src/utils/index.d.ts",
      "default": "./src/utils/index.js"
    }
  },
  "scripts": {
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Scintilla-Network/signatures.git"
  },
  "keywords": [
    "cryptography",
    "signatures",
    "post-quantum",
    "blockchain",
    "scintilla",
    "secp256k1",
    "ed25519",
    "bls",
    "dilithium",
    "sphincs",
    "kyber"
  ],
  "author": "Scintilla Labs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Scintilla-Network/signatures/issues"
  },
  "homepage": "https://github.com/Scintilla-Network/signatures#readme",
  "dependencies": {
    "@noble/curves": "1.8.1",
    "@noble/post-quantum": "0.4.0"
  },
  "devDependencies": {
    "typescript": "5.7.3",
    "vitest": "3.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
